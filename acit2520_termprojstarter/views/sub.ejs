<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
    <title>Sub posts</title>
  </head>
  <body>
    <main>
      <div class="authOptions">
        <% if (posts.length === 0) { %>
        <h1>Empty Category</h1>
        <% } else { %>
        <h1>Sub category - <%= subname %></h1>
        <% } %>
        <a role="button" href="/posts">Home</a>
      </div>

      <div>
        <% if (posts.length === 0) { %>
        <p>No posts found in this subgroup.</p>
        <% } else { %> <% posts.forEach(post => { %>
        <div class="individualPost">
          <a href="/posts/show/<%= post.id %>"><%= post.title %></a>
          <p><%= post.description %></p>
        </div>
        <% }) %> <% } %>
      </div>
    </main>
  </body>
</html>
